@model RapChieuPhim.Models.LichChieu
@using RapChieuPhim.Models;
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var phong = ViewData["phong"] as List<Phong>;
    var phim = ViewData["phim"] as List<Phim>;
    var ca = ViewData["ca"] as List<CaChieu>;
    var suat = ViewData["suat"] as List<Suatchieu>;
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Welcome to @Session["nguoi"]</h4>
                        <span class="ml-1">Lịch chiếu</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Lịch chiếu</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">



                            @using (Html.BeginForm("Create",
"LichChieu",
FormMethod.Post,
new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>
                                        Thông tin lịch chiếu
                                    </h4>
                                    <hr />
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-2"style="color:black;font-size:20px;">
                                            Tên phim
                                        </div>
                                        <div class="col-md-10">
                                            <select class="form-control" name="IdPhim">
                                                @foreach (var item in phim)
                                                {
                                                    <option value="@item.Id">@item.TenPhim</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2"style="color:black;font-size:20px;">
                                            Ca chiếu
                                        </div>
                                        <div class="col-md-10">
                                            <select class="form-control" name="IdCC">
                                                @foreach (var item in ca)
                                                {
                                                    <option value="@item.IdCC">@item.TenCC</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2"style="color:black;font-size:20px;">
                                            Suất chiếu
                                        </div>
                                        <div class="col-md-10">
                                            <select class="form-control" name="IdSC">
                                                @foreach (var item in suat)
                                                {
                                                    <option value="@item.IdSC">@item.TenSuat</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2"style="color:black;font-size:20px;">
                                            Ngày chiếu
                                        </div>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.NgayChieu, new { htmlAttributes = new { @class = "form-control", type = "Date" } })
                                            @Html.ValidationMessageFor(model => model.NgayChieu, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2"style="color:black;font-size:20px;">
                                            Giờ bắt đầu
                                        </div>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.GioBD, new { htmlAttributes = new { @class = "form-control", type = "Time" } })
                                            @Html.ValidationMessageFor(model => model.GioBD, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-2"style="color:black;font-size:20px;">
                                            Tên phòng
                                        </div>
                                        <div class="col-md-10">
                                            <select class="form-control" name="IdPhong">
                                                @foreach (var item in phong)
                                                {
                                                    <option value="@item.Id">@item.TenPhong</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Thêm lịch chiếu" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@if (Request["sc"] == "1")
{
    <script>alert("Ngày chiếu không thể nhỏ hơn ngày hiện tại.");</script>
}
else if (Request["sc"] == "2")
{
    <script>alert("Khung giờ đã có phim chiếu.");</script>
}

