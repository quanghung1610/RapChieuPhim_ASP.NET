@model PagedList.IPagedList<RapChieuPhim.Models.LoaiPhim>
@using PagedList.Mvc;
@using PagedList;
@{ ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml"; }

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="col-sm-6 p-md-0">
                    <div class="welcome-text">
                        <h4>Welcome to @Session["nguoi"]</h4>
                        <span class="ml-1">Thể loại phim</span>
                    </div>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <a class="btn btn-primary" href="/Admin/LoaiPhim/Create">Thêm thể loại phim</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table" style="color:black;">
                                <tr style="color:black;text-align:center">
                                    <th>Mã thể loại</th>
                                    <th>Tên thể loại phim</th>
                                    <th>Thao tác</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr style="color:black;">
                                        <td class="text-center">LP_@item.Id</td>
                                        <td class="text-center">@item.TenLoai</td>
                                        <td class="text-center">
                                            @Html.ActionLink("Cập nhật", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                                            <br />
                                            <br />
                                            @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-6 col-xs-6 col-sm-6 text-right" style="color:black">
        @(Model.PageCount <Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    </div>
    <div class="col-md-12" style="text-align:right;color:black">
        Tổng số bản ghi: @ViewBag.total &nbsp;
    </div>
    <ul class="pagination" style="float:right">

        @for (int i = 1; i <= Model.PageCount; i++)
        {
            <li>
                <a class="page-link" href="@Url.Action("Index", new { page = i })">@i</a>
            </li>
}
    </ul>
</div>
