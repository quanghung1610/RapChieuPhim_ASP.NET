@model RapChieuPhim.Models.Phim
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var lp = ViewData["lp"] as List<RapChieuPhim.Models.LoaiPhim>;
}
<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Welcome to @Session["nguoi"]</h4>
                    <span class="ml-1">PHIM</span>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Phim</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Thêm Phim</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <div class="form-validation">

                            @using (Html.BeginForm("Create",
"Phims",
FormMethod.Post,
new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Thông tin phim</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-2" style="color:black;font-size:20px;">
                                        Tên phim
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TenPhim, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenPhim, "", new { @class = "text-danger" })
                                    </div>
                                </div>



                                <div class="form-group">
                                    <div class="col-md-2" style="color:black;font-size:20px;">
                                        Thời lượng
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.ThoiLuong, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ThoiLuong, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Mô tả
                                    </div>
                                    <div class="col-md-10">
                                        <textarea name="MoTa" rows="10" class="form-control"></textarea>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Tình trạng
                                    </div>
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.TinhTrang)
                                            @Html.ValidationMessageFor(model => model.TinhTrang, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2" style="color:black;font-size:20px;">
                                        Thể loại
                                    </div>
                                    <div class="col-md-10">
                                        @foreach (var item in lp)
                                        {
                                            <input value="@item.Id" type="checkbox" name="IdLoaiPhim" /> @item.TenLoai
                                            <br />
                                        }
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Diễn viên
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DienVien, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DienVien, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Đạo diễn
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.DaoDien, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DaoDien, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Năm phát hành
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NamPhatHanh, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.NamPhatHanh, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Ngày công chiếu
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgayCongChieu, new { htmlAttributes = new { @class = "form-control", type = "Date" } })
                                        @Html.ValidationMessageFor(model => model.NgayCongChieu, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Ngày kết thúc
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.NgayKetThuc, new { htmlAttributes = new { @class = "form-control", type = "Date" } })
                                        @Html.ValidationMessageFor(model => model.NgayKetThuc, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                

                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Chất lượng
                                    </div>
                                    <div class="col-md-10"style="color:black;font-size:15px;">
                                        <input type="checkbox" value="2D" name="ChatLuong" />&nbsp; 2D &nbsp; &nbsp; &nbsp;
                                        <input type="checkbox" value="3D" name="ChatLuong" />&nbsp; 3D
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2" style="font-size:20px;">
                                        Chọn ảnh
                                    </div>
                                    <div class="col-lg-6">
                                        <input type="file" class="form-control" id="val-file" name="val-file" placeholder="">
                                    </div>
                                </div>
                            </div>
                            
                           

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Thêm Phim" class="btn btn-primary"/>
                                </div>
                            </div>
                        
                            }


                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@if (Request["sc"] == "5")
{
 <script>
   alert("Ngày công chiếu phải trước ngày kết thúc");
 </script>
}
@if(Request["sc"] == "1")
{
    <script> alert("Ngày công chiếu lớn hơn ngày hiện tại");</script>
}
