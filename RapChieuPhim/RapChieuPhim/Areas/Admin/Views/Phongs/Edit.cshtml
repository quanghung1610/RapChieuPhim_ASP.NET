@model RapChieuPhim.Models.Phong

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Welcome to @Session["nguoi"]</h4>
                    <span class="ml-1">PHÒNG</span>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thông Tin Phòng</h4>
                    </div>
                    <div class="card-body">
                        <div class="form-validation">
                            @using (Html.BeginForm("Edit",
                                                   "Phongs",
                                                   FormMethod.Post,
                                                   new { enctype = "multipart/form-data" }))
                            {
                                @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                <h4>Phòng</h4>
                                <hr />
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    <div class="col-md-2" style="color:black;font-size:20px;">
                                        Tên phòng
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.TenPhong, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenPhong, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2" style="color:black;font-size:20px;">
                                        Số lượng ghế
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2" style="color:black;font-size:20px;">
                                        Số lượng hàng ghế
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.SoluongHang, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2" style="color:black;font-size:20px;">
                                        Số ghế/ Hàng
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.Soluongghemoihang, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Soluongghemoihang, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Mở cửa
                                    </div>
                                    <div class="col-md-10">
                                        <div class="checkbox">
                                            @Html.EditorFor(model => model.TrinhTrang)
                                            @Html.ValidationMessageFor(model => model.TrinhTrang, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2"style="color:black;font-size:20px;">
                                        Mô tả
                                    </div>
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Cập nhật" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




